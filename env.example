# Server Configuration
APP_PORT=8080
APP_READ_TIMEOUT=15s
APP_WRITE_TIMEOUT=15s
APP_IDLE_TIMEOUT=60s

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/golang_api_rest?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=golang_api_rest
DB_SSL_MODE=disable

# JWT Configuration
APP_JWT_SECRET=your-super-secret-jwt-key-change-in-production
APP_JWT_EXPIRATION=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Request-ID
CORS_EXPOSED_HEADERS=Content-Length,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Prometheus Configuration (optional)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Jaeger Configuration (optional)
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces 